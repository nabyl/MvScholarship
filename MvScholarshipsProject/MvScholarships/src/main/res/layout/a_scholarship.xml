<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#ffffff"

             android:padding="20px">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top">

        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

            <TableRow
                    android:layout_width="wrap_content">


                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/schoLogo"
                        android:layout_marginTop="6px"
                        android:src="@drawable/scho_logo_new"


                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="50 Opportunities for Teaching â€“ June 2013 -Selection List"
                        android:id="@+id/schoName"
                        android:textColor="#5a5a5a"
                        android:paddingLeft="10px"
                        android:textSize="20dp"

                        android:layout_gravity="center_horizontal|top"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom">

        <TableLayout
                android:id="@+id/tblDocuments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_below="@+id/schoName"
                android:layout_marginLeft="30px"
                android:layout_marginTop="20px"></TableLayout>
    </LinearLayout>

</LinearLayout>